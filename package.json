{
  "name": "@tenorlab/react-dashboard",
  "version": "1.3.5",
  "description": "Foundation components for creating user-configurable dashboards in React",
  "author": "Damiano Fusco",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tenorlab/react-dashboard.git"
  },
  "bugs": {
    "url": "https://github.com/tenorlab/react-dashboard/issues"
  },
  "homepage": "https://github.com/tenorlab/react-dashboard#readme",
  "keywords": [
    "dashboard, component, libraries, scripts, javascript, react"
  ],
  "scripts": {
    "dev": "vite",
    "clean": "rm -rf dist node_modules package-lock.json",
    "OLD-build-types": "tsc src/ind8ex.ts --jsx react-jsx --downlevelIteration --esModuleInterop --declaration --emitDeclarationOnly --outDir dist",
    "OLD-build": "npm run pretty; tsc --jsx react-jsx --esModuleInterop && vite build; npm run build-types",
    "build": "npm run pretty; vite build",
    "pub": "npm run build; npm publish --access public --otp=",
    "test": "TESTING=true vitest run",
    "test-watch": "TESTING=true vitest watch",
    "pretty": "npx prettier -w \"./src/**/*.ts*\"",
    "version-patch": "npm run pretty && npm version patch -m \"Patch version\"",
    "preversion": "npm run test",
    "version": "npm run build",
    "postversion": "git push",
    "push": "npm run pretty; git add .; git commit -m \"Latest\"; git push"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/react-dashboard.d.ts", 
      "import": "./dist/react-dashboard.es.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.es.js" 
    }
  },
  "types": "./dist/react-dashboard.d.ts",
  "main": "./dist/react-dashboard.es.js",
  "module": "./dist/react-dashboard.es.js",
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@tenorlab/dashboard-core": "^1.0.1",
    "@types/node": "^24.10.1",
    "@types/react": "19.2.3",
    "@types/react-dom": "19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "prettier": "^3.7.4",
    "react": "19.2.3",
    "react-dom": "19.2.3",
    "react-draggable": "^4.5.0",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.16",
    "zustand": "^5.0.9"
  }
}
